    ;;
  100)
    POSTFIX=100
    ;;
  500)
    POSTFIX=500
    ;;
  *)
    POSTFIX=10
    ;;
  esac
  wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test$POSTFIX.zip
}

# tail via ssh
function ssh_log(){
  case $2 in
  all)
    ssh $1 'cd /var/log; find . -type f \( -name "*.log" \) -exec tail -f "$file" {} +'
    exit 0;
    ;;
  *)
    TAIL_PATH=$2
    ;;
  esac
  ssh $1 "tail -f $TAIL_PATH -n 100"
}

